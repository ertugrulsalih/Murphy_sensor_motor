<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" >

    <xacro:include filename="inertial_macros.xacro"/>


    <material name="white">
        <color rgba="1 1 1 1" />
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1"/>
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>
    <material name="red">
        <color rgba="1 0 0 1"/>
    </material>

    <!-- BASE LINK -->

    <link name="base_link">

    </link>
    
    <!-- CHASSIS LINK -->
 <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="-0.445 0 0"/>
    </joint>

    <link name="chassis">
        <visual>
            <origin xyz="0.445 0 0.175"/>
            <geometry>
                <box size="0.89 0.64 0.35"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <origin xyz="0.445 0 0.175"/>
            <geometry>
                <box size="0.89 0.64 0.35"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="8" x="0.89" y="0.64" z="0.35">
            <origin xyz="0.445 0 0.175" rpy="0 0 0"/>
        </xacro:inertial_box>

    </link>
    <gazebo reference="chassis">
    <material>Gazebo/White</material>
</gazebo>

    

<!-- LEFT WHEEL -->

<joint name="left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <origin xyz="-0.103 0.35 0" rpy="-${pi/2} 0 0"/>
    <axis xyz="0 0 1"/>
</joint>

<link name="left_wheel">
    <visual>
        <geometry>
            <cylinder length="0.06" radius="0.0626" />
        </geometry>
        <material name="blue"/>
    </visual>
    <collision>
        <geometry>
            <cylinder length="0.06" radius="0.0626" />
        </geometry>
    </collision>
    <xacro:inertial_cylinder mass="0.1" length="0.06" radius="0.0626">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
</link>
<gazebo reference="left_wheel">
    <material>Gazebo/Blue</material>
</gazebo>

<!-- RIGHT WHEEL LINK -->

<joint name="right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <origin xyz="-0.103 -0.35 0" rpy="${pi/2} 0 0"/>
    <axis xyz="0 0 -1"/>
</joint>

<link name="right_wheel">
    <visual>
        <geometry>
            <cylinder length="0.06" radius="0.0626" />
        </geometry>
        <material name="blue"/>
    </visual>
    <collision>
        <geometry>
            <cylinder length="0.06" radius="0.0626" />
        </geometry>
    </collision>
    <xacro:inertial_cylinder mass="0.1" length="0.06" radius="0.0626">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    
</link>
<gazebo reference="right_wheel">
    <material>Gazebo/Blue</material>
</gazebo>

<!-- FRONT CASTER WHEEL LINK -->

    <joint name="front_caster_wheel_joint" type="fixed">
        <parent link="chassis"/>
        <child link="front_caster_wheel"/>
        <origin xyz="0.82 -0.25 0"/>

    </joint>

    <link name="front_caster_wheel">
        <visual>
            <geometry>
                <sphere radius="0.0625"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.0625"/>
            </geometry>
            <material name="black"/>
        </collision>
        <xacro:inertial_sphere mass="0.1" radius="0.0625">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>
    </link>
    <gazebo reference="front_caster_wheel">
    <material>Gazebo/Black</material>
</gazebo>

<!-- FRONT CASTER LEFT WHEEL LINK-->
    <joint name="front_caster_left_wheel_joint" type="fixed">
        <parent link="chassis"/>
        <child link="front_caster_left_wheel"/>
        <origin xyz="0.82 0.25 0"/>

    </joint>

    <link name="front_caster_left_wheel">
        <visual>
            <geometry>
                <sphere radius="0.0625"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.0625"/>
            </geometry>
            <material name="black"/>
        </collision>
        <xacro:inertial_sphere mass="0.1" radius="0.0625">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>
    </link>
    <gazebo reference="front_caster_left_wheel">
    <material>Gazebo/Black</material>
</gazebo>

    <!-- BACK CASTER LEFT WHEEL LINK -->

        <joint name="back_caster_left_wheel_joint" type="fixed">
        <parent link="chassis"/>
        <child link="back_caster_left_wheel"/>
        <origin xyz="0.07 -0.25 0"/>

    </joint>

    <link name="back_caster_left_wheel">
        <visual>
            <geometry>
                <sphere radius="0.0625"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.0625"/>
            </geometry>
            <material name="black"/>
        </collision>
        <xacro:inertial_sphere mass="0.1" radius="0.0625">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>
    </link>
    <gazebo reference="back_caster_left_wheel">
    <material>Gazebo/Black</material>
    <mu1 value="0.001"/>
    <mu2 value="0.001"/>

</gazebo>

    <!-- BACK CASTER RIGHT WHEEL LINK -->

        <joint name="back_caster_right_wheel_joint" type="fixed">
        <parent link="chassis"/>
        <child link="back_caster_right_wheel"/>
        <origin xyz="0.07 0.25 0"/>

    </joint>

    <link name="back_caster_right_wheel">
        <visual>
            <geometry>
                <sphere radius="0.0625"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.0625"/>
            </geometry>
            <material name="black"/>
        </collision>
        <xacro:inertial_sphere mass="0.1" radius="0.0625">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>
    </link>
    <gazebo reference="back_caster_right_wheel">
    <material>Gazebo/Black</material>

</gazebo>
    
    
    
</robot>
